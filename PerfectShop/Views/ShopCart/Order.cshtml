@model IEnumerable<ViewModels.ShowOrderViewModel>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Peoduct Name</th>
            <th scope="col">Count</th>
            <th scope="col">Price</th>
            <th scope="col">sum</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/Images/ProductImages/Thumb/@item.ImageName" alt="Alternate Text" /></td>
                <td>@item.Title</td>
                <td><input name="points" min="1" max="30" step="1" value="@item.Count" onchange="commandOrder(@item.ProductID,$(this).val())" type="number"></td>
                <td>@item.Price</td>
                <td>@item.Sum</td>
                <td><a class="btn btn-danger" style="color:white;" onclick="commandOrder(@item.ProductID,0)">Delete</a></td>
            </tr>
        }
    </tbody>
</table>


<div class="tbl-footer">
    <ul>
        <li> Total price : <span> @Model.Sum(p => p.Sum).ToString("#,0") Tomans  </span></li>
        <li class="total-price"> The amount payable : <span> @Model.Sum(p => p.Sum).ToString("#,0") Tomans  </span></li>
    </ul>
</div>
<a href="/ShopCart/Payment" type="button" class="border-radius submit-basket-button"> confirm and pay </a>
<div class="clearfix"></div>

