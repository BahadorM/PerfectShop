@model IEnumerable<DataLayer.Products>



@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="latest-products">
    <div class="container">




        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>All Products</h2>
                </div>
            </div>


            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="product-item">
                        <a href="/Home/SingleProductPage/@item.ProductID"><img src="~/Images/ProductImages/@item.ImageName" class="thumbnail" style="max-width:300px; max-height:200px;" alt=""></a>
                        <div class="down-content">
                            <a href="/Home/SingleProductPage/@item.ProductID"><h4>@item.ProductTitle</h4></a>
                            <h6>$@item.Price</h6>
                            <p>@item.ShortDescrioption</p>
                            <ul class="stars">
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                            </ul>
                            <span>Reviews (21)</span>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</div>

@section Slider{
    <div class="page-heading products-heading header-text">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-content">
                        <h4>new arrivals</h4>
                        <h2>sixteen products</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


@section scripts{

    <script>

        $(function () {
            CountShopCart();
        });

        function CountShopCart() {
            $.get("/Api/Shop", function (result) {
                $("#ShopCartCount").html(result);
            });
        }
    </script>
}
