

@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link" href="#">Welcome @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/LogOff">SignOut</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" href="/Login">Login</a>
    </li>

    <li class="nav-item">
        <a class="nav-link" href="/Register">Register</a>
    </li>
}